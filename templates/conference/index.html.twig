{% extends 'base.html.twig' %}

{% block title %}Conference GuestBook{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
  <h1 class="text-4xl font-bold text-center mb-6">Conference GuestBook</h1>
  
  <div class="bg-white shadow-md rounded-lg p-6 border border-gray-300">
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-4">Give your feedback!</h2>
    <div class="space-y-4">
      {% for conference in conferences %}
    <a href="{{ path('conference', { id: conference.id }) }}" class="block p-4 bg-gray-100 rounded-lg shadow-sm border border-gray-200 hover:shadow-lg transition-shadow">
        <h4 class="text-lg font-medium text-gray-700 text-center">{{ conference.city }} {{conference.year}}</h4>
    </a>
{% else %}
    <p class="text-center text-gray-500">Aucune conf√©rence disponible pour le moment.</p>
{% endfor %}
    </div>
  </div>
</div>
{% endblock %}
