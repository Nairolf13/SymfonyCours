{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook - {{ conference }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl mb-6">
                {{ conference }} Conference
            </h2>

            {% if comments|length > 0 %}
                <p class="max-w-xl mx-auto text-xl text-gray-500 mb-4">
                    There are <span class="font-semibold text-gray-800">{{ comments|length }}</span> comments.
                </p>
                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
                    {% for comment in comments %}
                        <div class="bg-white shadow rounded-lg p-6 border border-gray-200 transition-all hover:shadow-lg">
                            {% if comment.photofilename %}
                                <img 
                                    src="{{ asset('uploads/photos/' ~ comment.photofilename) }}" 
                                    alt="User Photo" 
                                    class="w-16 h-16 rounded-full mx-auto mb-4 object-cover"
                                />
                            {% endif %}
                            <h4 class="text-2xl font-bold text-gray-900 mb-2 text-center">{{ comment.author }}</h4>
                            <small class="block text-sm text-gray-500 text-center">{{ comment.createdAt|format_datetime('medium', 'short') }}</small>
                            <p class="mt-4 text-lg text-gray-700 text-center">{{ comment.text }}</p>
                        </div>
                    {% endfor %}
                </div>

                <div class="flex justify-center items-center mt-8">
                    {% if previous >= 0 %}
                        <a href="{{ path('conference', { id: conference.id, offset: previous }) }}"
                           class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-4">
                            Previous
                        </a>
                    {% endif %}

                    {% if next < comments|length %}
                        <a href="{{ path('conference', { id: conference.id, offset: next }) }}"
                           class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Next
                        </a>
                    {% endif %}
                </div>
            {% else %}
                <p class="text-center text-gray-500 text-xl mt-5">
                    No comments have been posted yet for this conference.
                </p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}