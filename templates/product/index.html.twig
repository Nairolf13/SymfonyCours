{% extends 'base.html.twig' %}

{% block title %}Our Products{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
        <div class="text-center relative">
            <div class="absolute inset-0 flex items-center justify-center opacity-5">
                <svg class="w-64 h-64" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                </svg>
            </div>
            <h1 class="text-5xl font-black text-gray-900 sm:text-6xl sm:tracking-tight lg:text-7xl bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-indigo-600">
                Our Products
            </h1>
            <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-600 font-medium">
                Discover our amazing collection of products
            </p>
        </div>
        
        <div class="mt-16 grid gap-10 md:grid-cols-2 lg:grid-cols-2">
            {% if products|length > 0 %}
                {% for product in products %}
                    <div class="group bg-white overflow-hidden rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                        <div class="p-8">
                            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-indigo-600 transition-colors">
                                {{ product.name }}
                            </h3>
                            <p class="text-gray-600 mb-6 line-clamp-2 text-lg">
                                {{ product.description | raw }}
                            </p>
                            <div class="flex justify-between items-center">
                                <span class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-indigo-600 bg-clip-text text-transparent">
                                    ${{ product.price|number_format(2, '.', ',') }}
                                </span>
                                <a href="{{ path('app_product_show', { id: product.id }) }}" 
                                   class="inline-flex items-center px-6 py-3 text-base font-medium rounded-xl text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 transform transition-all duration-200 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    <span>View Details</span>
                                    <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-span-2 text-center py-16">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                    </svg>
                    <h3 class="mt-2 text-xl font-medium text-gray-900">No products found</h3>
                    <p class="mt-1 text-gray-500">Check back later for new products.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}