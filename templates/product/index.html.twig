{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<h1 class="text-2xl font-bold text-center mb-6">Product List</h1>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{% for product in products %}
				<a href="{{ path('app_product_show', { id: product.id }) }}" class="block p-4 bg-gray-100 rounded-lg shadow-sm border border-gray-200 hover:shadow-lg transition-shadow text-center">
					{{ product.name }}
				</a>
			{% else %}
				<p class="text-center text-gray-500">No products found.</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}

